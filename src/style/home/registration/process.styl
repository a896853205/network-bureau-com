.registion-process-box {
  display: flex;
  align-items: center;
  justify-content: space-around;

  .process-item-box {
    width: 23%;

    .manager-info-bottom-box {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-left: 0;

      .manager-info-head-box {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        box-shadow: 0 0 5px #ddd;
        overflow: hidden;
      }

      .manager-into-item-box {
        width: 80%;
        display: flex;
        padding: 6px 0;
        justify-content: space-between;

        .manager-info-icon {
          margin-right: 2px;
          font-size: 18px;
        }
      }
    }

    .process-profile-bottom-box {
      margin-top: 30px;
      margin-left: 30px;

      .process-profile-step {
        font-size: 16px;
      }
    }
  }

  .current-profile-box {
    width: 50%;

    .process-profile-ol {
      li {
        font-size: 16px;
        margin: 0 auto;
        width: 80%;
        max-width: 400px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        border-bottom: 1px solid #ddd;
        margin-bottom: 15px;

        .profile-title {
          margin-right: 10px;
        }

        .current-right-box {
          width: 110px;
          text-align: center;
          margin-right: 5px;
        }

        .current-upload-button {
          color: rgb(97, 77, 210);
          border: 0;
          font-size: 14px;
          cursor: pointer;
          height: 20px;

          &:hover {
            text-decoration: underline;
          }
        }
      }
    }
  }
}