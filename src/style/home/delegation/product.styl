.detail-product-box {
  display: flex;

  .product-left-box {
    width: 60%;
    padding: 10px;

    .button {
      min-width: 300px;
    }

    .half-button {
      min-width: 150px;

      &:first-child {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
      }

      &:last-child {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
      }
    }
  }

  .product-right-box {
    width: 40%;
    padding: 10px;
  }
}