.welcome-box {
  display: flex;

  .left-box {
    width: 50%;
    padding: 0px 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;

    .top-box {
      .caption {
        margin-top: 20px;
        font-size: 25px;
        font-weight: 900;

        span {
          margin-left: 10px;
        }
      }

      .passage {
        font-size: 14px;
        text-indent: 28px;
      }
    }
  }

  .bottom-box {
    display: flex;
    margin-top: 20px;

    .input {
      width: 70%;
    }

    .button {
      width: 30%;
    }
  }

  .right-box {
    width: 50%;

    .image {
      width: 100%;
      height: 100%;
    }
  }
}